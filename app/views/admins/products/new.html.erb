<h2>新規商品登録</h2>

<%= form_with(model:[:admins, @product], local: true) do |f| %>
  <div class="field">
    <%= f.label :image, '商品画像' %>
    <%= f.attachment_field :image %>
  </div>
  <div class="field">
    <%= f.label :name, '商品名' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, '商品説明' %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :product_type_id, 'ジャンル' %>
    <%= f.collection_select :product_type_id, ProductType.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :price, '税抜価格' %>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :is_active, '販売ステータス' %>
    <div>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value:true %>
    </div>
    <div>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value:false %>
    </div>
  </div>
  <div class="field">
    <%= f.submit '新規登録' %>
  </div>
<% end %>