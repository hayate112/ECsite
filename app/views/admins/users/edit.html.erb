<h2>〇〇さんの会員情報編集</h2>

<%= form_with(model:[:admins, @user], local: true) do |f| %>

  会員ID<%= @user.id %>

  <div class="field">
    <%= f.label :family_name, '姓' %><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name, '名' %><br />
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :family_name_kana, '姓（カナ）' %><br />
    <%= f.text_field :family_name_kana, autocomplete: "family_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, '名（カナ）' %><br />
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, '郵便番号' %><br />
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %><br />
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, '電話番号' %><br />
    <%= f.text_field :phone_number, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :is_deleted, '会員ステータス' %>
    <div>
      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, '有効', value:false %>
    </div>
    <div>
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, '退会', value:true %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>